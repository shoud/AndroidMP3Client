<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.uapv1301804.lecteurmp3tp.ActivityAjouter">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Titre"
        android:ems="10"
        android:id="@+id/etTitreEdit"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:editable="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Album"
        android:ems="10"
        android:id="@+id/etAlbumeEdit"
        android:layout_below="@+id/etTitreEdit"
        android:layout_alignLeft="@+id/etTitreEdit"
        android:layout_alignStart="@+id/etTitreEdit"
        android:layout_alignRight="@+id/etTitreEdit"
        android:layout_alignEnd="@+id/etTitreEdit"
        android:editable="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Compositeur"
        android:ems="10"
        android:id="@+id/etCompoEdit"
        android:layout_below="@+id/etAlbumeEdit"
        android:layout_alignLeft="@+id/etAlbumeEdit"
        android:layout_alignStart="@+id/etAlbumeEdit"
        android:layout_alignRight="@+id/etAlbumeEdit"
        android:layout_alignEnd="@+id/etAlbumeEdit"
        android:editable="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Chanteur"
        android:ems="10"
        android:id="@+id/edChanteurEdit"
        android:layout_below="@+id/etCompoEdit"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:layout_alignRight="@+id/etCompoEdit"
        android:layout_alignEnd="@+id/etCompoEdit"
        android:editable="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Ajouter une musique "
        android:id="@+id/textView2"
        android:layout_alignRight="@+id/etTitreEdit"
        android:layout_alignEnd="@+id/etTitreEdit"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ajouter"
        android:id="@+id/btAjouterNew"
        android:onClick="btAjouterNew"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Retour"
        android:id="@+id/btRetour"
        android:onClick="btRetour"
        android:layout_alignBottom="@+id/btAjouterNew"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
